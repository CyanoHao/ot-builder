{
    "name": "ot-builder-monorepo",
    "private": true,
    "license": "MIT",
    "scripts": {
        "boot": "npm i && npm run update:package.json && lerna bootstrap --hoist --ignore-scripts && npm run update:tsconfig.json",
        "clean": "rimraf .cache && lerna run clean && lerna clean --yes",
        "build": "tsc --build packages/tsconfig.json",
        "rebuild": "npm run clean && npm run boot && npm run build",
        "watch": "tsc --build --watch packages/tsconfig.json",
        "update:tsconfig.json": "ts-node scripts/update-package-tsconfig.ts",
        "update:package.json": "ts-node scripts/update-package-json.ts",
        "create-package": "ts-node scripts/create-package.ts",
        "test": "jest",
        "bump-ver": "lerna version --no-git-tag-version --no-push --force-publish --exact && npm run update:package.json && npm run update:tsconfig.json",
        "change": "beachball change",
        "beachball:check": "beachball check",
        "beachball:publish": "beachball publish",
        "docs:dev": "cd doc && next",
        "docs:build": "cd doc && next build",
        "docs:start": "cd doc && next start",
        "docs:deploy": "ts-node scripts/deploy-documents.ts"
    },
    "devDependencies": {
        "@mdx-js/loader": "^1.5.1",
        "@next/mdx": "^9.1.5",
        "@types/node": "^12.7.5",
        "@types/react": "^16.9.16",
        "@zeit/next-stylus": "^1.0.1",
        "beachball": "^1.16.0",
        "jest": "^24.8.0",
        "lerna": "^3.16.4",
        "next": "^9.1.5",
        "prettier": "^1.15.2",
        "prettier-tslint": "^0.4.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "rimraf": "^2.6.3",
        "stylus": "^0.54.7",
        "ts-node": "^8.3.0",
        "tslint-lerna-rules": "^1.0.4",
        "typescript": "^3.7.0",
        "vrsource-tslint-rules": "^6.0.0",
        "fs-extra": "^8.1.0",
        "@types/fs-extra": "^8.0.1",
        "@types/rimraf": "^2.0.3"
    }
}
